import java.util.Scanner;

public class SumOfEvenDigits {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        sc.close();

        int sum = 0;
        int temp = n;

        while (temp > 0) {
            int digit = temp % 10;
            if (digit % 2 == 0) {
                sum += digit;
            }
            temp /= 10;
        }

        System.out.println(sum);
    }
}
